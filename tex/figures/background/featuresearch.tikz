\begin{tikzpicture}[%
	node distance=12mm and 6mm%
	]%
	\pgfmathsetseed{4111}
	
	\foreach \x in {1,...,7} {
		\foreach \y in {1,...,7} {
			% random direction and length
			\pgfmathsetmacro\randx{rnd*0.8 - 0.4}
			\pgfmathsetmacro\randy{rnd*0.4 - 0.4}
			
			% arrow
			\draw[line width=2pt,color=MyColor1]
				(\x * 0.75 + \randx, \y * 0.75 + \randy) -- +(0, 0.5);
		}
	}
	\draw[line width=2pt, color=MyColor1] (3.5, 2.1) -- +(0.5, 0);	
\end{tikzpicture}	
